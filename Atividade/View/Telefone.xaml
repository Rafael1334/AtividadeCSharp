<Page x:Class="Atividade.View.Telefone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atividade.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="Telefone">

    <Grid>

        <Label Content="DDD:" HorizontalAlignment="Left" Margin="142,68,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_DDD" HorizontalAlignment="Left" Margin="142,93,0,0" VerticalAlignment="Top" Width="175" MaxLength="3" PreviewTextInput="txt_PreviewTextInput"/>

        <Label Content="Número do telefone:" HorizontalAlignment="Left" Margin="142,143,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_NumeroTelefone" HorizontalAlignment="Left" Margin="142,168,0,0" VerticalAlignment="Top" Width="175" MaxLength="9" PreviewTextInput="txt_PreviewTextInput"/>

        <Label Content="Operadora:" HorizontalAlignment="Left" Margin="142,218,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_Operadora" HorizontalAlignment="Left" Margin="142,243,0,0" VerticalAlignment="Top" Width="175"/>


        <DataGrid Name="dtg_TabelaTelefone"  Height="300" Width="400" Margin="470,67,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" AutoGenerateColumns="true" CanUserDeleteRows="True" CanUserReorderColumns="False" SelectionChanged="dtg_TabelaTelefone_SelectionChanged" />

        <Button Name="btn_adicionarTelefone"  Content="Adicionar" HorizontalAlignment="Left" Margin="263,298,0,0" VerticalAlignment="Top" Click="btn_adicionarTelefone_Click"/>
        <Button Name="btn_excluir" Content="Excluir" HorizontalAlignment="Left" Margin="470,381,0,0" VerticalAlignment="Top" Click="btn_excluir_Click"/>
        
        <Button Name="btn_salvar" Content="Salvar" HorizontalAlignment="Left" Margin="722,420,0,0" VerticalAlignment="Top" Click="btn_salvar_Click" IsEnabled="false"/>
        <Button Name="btn_voltar" Content="Voltar" HorizontalAlignment="Left" Margin="41,420,0,0" VerticalAlignment="Top" Click="btn_voltar_Click"/>
        

    </Grid>
</Page>
